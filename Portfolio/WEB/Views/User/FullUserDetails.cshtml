@model Entity.Business_Entity.UserFullDetailsVM




<a asp-controller="User" asp-action="Index" class="btn btn-dark btn-sm ">Back</a>


<h2 class="text-center">User Details: @Model.User.UserName</h2>

<br />
<br />


<!-- This button for PDF -->
<a asp-controller="UserDetails"  asp-action="ExportPdf" asp-route-userId="@Model.User.UserId" class="btn btn-danger">
    Download PDF
</a>

<br />
<br />

<!-- This button for RDLC PDF & Excel Report -->
<span style="display: flex; gap: 10px;">
<a asp-controller="User" asp-action="RDLCReport" asp-route-reportType="pdf" asp-route-userId="@Model.User.UserId" class="btn btn-danger">
    RDLC Report PDF
</a>

    <a asp-controller="User" asp-action="RDLCReport" asp-route-reportType="excel" asp-route-userId="@Model.User.UserId" class="btn btn-success">
    RDLC Report Excel
</a>
</span>


<br />
<br />



<h4>Basic User Info</h4>
<ul>
    <li>Email: @Model.User.Email</li>
    <li>Age: @Model.User.Age</li>
    <li>Bio: @Model.User.Bio</li>
</ul>

<hr />

<h3>Projects</h3>
@if (Model.Projects.Any())
{
    <table class="table table-bordered">
        <tr><th>Title</th><th>Description</th></tr>
        @foreach (var p in Model.Projects)
        {
            <tr>
                <td>@p.ProjectTitle</td>
                <td>@p.Description</td>
            </tr>
        }
    </table>
}
else
{
    <p>No Projects Found</p>
}

<hr />

<h3>Education</h3>
@if (Model.Educations.Any())
{
    <table class="table table-bordered">
        <tr><th>Institution</th><th>Degree</th><th>Year</th></tr>
        @foreach (var e in Model.Educations)
        {
            <tr>
                <td>@e.Institution</td>
                <td>@e.Degree</td>
                <td>@e.Year</td>
            </tr>
        }
    </table>
}
else
{
    <p>No Education Found</p>
}

<hr />

<h3>Experience</h3>
@if (Model.Experiences.Any())
{
    <table class="table table-bordered">
        <tr><th>Company</th><th>Role</th></tr>
        @foreach (var ex in Model.Experiences)
        {
            <tr>
                <td>@ex.CompanyName</td>
                <td>@ex.Position</td>
            </tr>
        }
    </table>
}
else
{
    <p>No Experience Found</p>
}

