<!-- Model Declaration -->

@model IEnumerable<Entity.Business_Entity.UserDTO>
@using Entity.Business_Entity;
@using X.PagedList
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "All Users";
}

<a href="/User/Create" class="btn btn-success">Create User</a>
<br />
<br />

<h2 class="mb-3">All Registered Users</h2>

<!-- Search form -->
<form asp-action="Index" method="post" class="mb-3">
    <div class="input-group">
        <input type="text" name="userName" class="form-control" placeholder="Search by Username..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<!-- Table -->
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>User ID</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="User" asp-action="FullUserDetails" asp-route-userId="@user.UserId" class="btn btn-info btn-sm">See Details</a>
                        <a asp-controller="UserDetails" asp-action="EditDetails" asp-route-userId="@user.UserId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-controller="UserDetails" asp-action="Delete" asp-route-userId="@user.UserId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No users found.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination (only for GET Index with IPagedList) -->
@if (Model is IPagedList<Entity.Business_Entity.UserDTO>)
{
    <div class="text-center mt-3">
        @Html.PagedListPager((IPagedList<UserDTO>)Model, page => Url.Action("Index", new { page }))
    </div>
}
