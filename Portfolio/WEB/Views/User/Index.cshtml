@model IEnumerable<Entity.Business_Entity.UserDTO>

@{
    ViewData["Title"] = "All Users";
}


<a href="/User/Create" class="btn btn-success">Create User</a>

<br />
<br />



<h2 class="mb-3">All Registered Users</h2>

<!-- search feature input here -->

<form asp-action="index" method="post" class="mb-3">
    <div class="input-group">
        <input type="text" name="username" class="form-control" placeholder="Search by Username..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>

</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}


<!-- Found User From Serach -->

@if (ViewBag.SearchResults != null)
{
    <h3>Search Results</h3>

    <table class="table table-bordered table-striped">
        <thead class="table-secondary">
            <tr>
                <th>User ID</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in ViewBag.SearchResults)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="User"
                   asp-action="FullUserDetails"
                   asp-route-userId="@user.UserId"
                           class="btn btn-info btn-sm">
                            See Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}



<!--  original table stays here , if no match found then show all user -->
@if (ViewBag.SearchResults == null)
{
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>User ID</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>

                        <a asp-controller="User" asp-action="FullUserDetails" asp-route-userId="@user.UserId" class="btn btn-info btn-sm">See Details</a>
                        <a asp-controller="UserDetails" asp-action="EditDetails" asp-route-userId="@user.UserId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-controller="UserDetails" asp-action="Delete" asp-route-userId="@user.UserId" class="btn btn-danger btn-sm">Delete</a>
                        
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No users found.</td>
            </tr>
        }
    </tbody>
</table>
}
