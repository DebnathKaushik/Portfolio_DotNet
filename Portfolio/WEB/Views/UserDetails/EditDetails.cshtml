@model Entity.Business_Entity.UserDetailsViewModel

@{
    ViewData["Title"] = "Edit Details";
}

<h2 class="text-center">Edit Details for <span class="text-primary">@Model.UserName</span></h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="EditDetails" method="post">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="UserName" />

    <!-- PROJECTS -->
    <h3>Projects</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Project Title</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Projects.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="Projects[i].ProjectId" type="hidden" />
                        <input asp-for="Projects[i].ProjectTitle" class="form-control" />
                    </td>
                    <td>
                        <input asp-for="Projects[i].Description" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- EXPERIENCES -->
    <h3>Experiences</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Company</th>
                <th>Position</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Experiences.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="Experiences[i].ExperienceId" type="hidden" />
                        <input asp-for="Experiences[i].CompanyName" class="form-control" />
                    </td>
                    <td>
                        <input asp-for="Experiences[i].Position" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- EDUCATIONS -->
    <h3>Educations</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Institution</th>
                <th>Degree</th>
                <th>Year</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Educations.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="Educations[i].EducationId" type="hidden" />
                        <input asp-for="Educations[i].Institution" class="form-control" />
                    </td>
                    <td>
                        <input asp-for="Educations[i].Degree" class="form-control" />
                    </td>
                    <td>
                        <input asp-for="Educations[i].Year" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Update</button>
</form>


